{
  "name": "@venmail/vsm",
  "version": "0.1.0",
  "description": "Official SDK for consuming Venmail webhooks and event endpoints",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/build-cjs.js",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "node scripts/build-cjs.js",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "build:docs": "echo 'Documentation ready for deployment'",
    "docs:serve": "python -m http.server 8080 --directory docs-site"
  },
  "peerDependencies": {
    "express": ">=4.18.0"
  },
  "devDependencies": {
    "express": "^4.18.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.3",
    "ts-jest": "^29.1.0"
  }
}
